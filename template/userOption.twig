{% extends "base.twig" %}

{% block title %}User Option{% endblock %}

{% block content %}

    <div class="bg-secondary container-fluid pt-2 d-flex justify-content-center">
        <div class="">
            <h2 class="">Edit User</h2>
        </div>
    </div>
    <div class="d-flex justify-content-end" style="width:10vw; position: relative; bottom: 38px; left: 75vw;">
        <div class="">
            <a href="/dashboard">back</a>
        </div>        
    </div>
    
    <div class="container d-flex flex-column align-items-center justify-content-center pb-5" style="margin-top: 70px;">
        <form class="border d-flex flex-column align-items-center justify-content-center" action=""onsubmit="LoginFunc" style="height: 580px; width:400px">
            <div class="col-8 mb-3">
                <label>First Name:</label>
                <div>
                    <input class="form-control" type="text"placeholder"ex: John">
                </div>
            </div>

            <div class="col-8 mb-3">
                <label class="form-label">Last Name:</label>
                <div>
                    <input class="form-control" type="text" placeholder"ex: Smith">
                </div>
            </div>

            <div class="col-8 mb-3">
                <label class="form-label">E-mail:</label>
                <div>
                    <input class="form-control" type="email" placeholder"ex: email@email.com">
                </div>
            </div>

            <div class="col-8 mb-3">
                <label class="form-label">Username:</label>
                <div>
                    <input class="form-control" type="text" placeholder"ex: Smith">
                </div>
            </div>

            <div class="col-8 mb-3">
                <label class="form-label">Password:</label>
                <div>
                    <input class="form-control" type="password" placeholder"ex: ******">
                </div>
            </div>
            
            <div class="col-8 mb-3">
                <label class="form-label">Confirm Password:</label>
                <div>
                    <input class="form-control" type="password" placeholder"ex: ******">
                </div>
            </div>

            <div class="d-grid col-6">
                <button type="submit"class="btn btn-primary">Edit</button>
            </div>
        </form>    
    </div>

{% endblock %}