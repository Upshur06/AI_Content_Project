{% extends 'base.twig' %}

{% block title %}company info{% endblock %}

{% block content %}

<div id="companyInfoContainer" class="container p-5 transitionForward transitionBackward">

    <h3 class="">Current Customer Infomation</h3>

    <div class="container">

        <div class="mx-4">
            <form action="" id="formCompanyInfoInputContainer">
                <div class="border my-3 p-5">
                    <div class="mb-3">
                        <label class="form-label">What is your Company service type?</label>
                        <div>
                            <select class="form-select" name="company-service-type" id="company-service-type">
                                <option selected>Choose...</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">What types of clients does your Company target? </label>
                            <div>
                                <input class="form-control" type="text" name="company-target" id="company-target">
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">What is your current largest client, industy or type? </label>
                            <div>
                                <input class="form-control" type="text" name="company-largest-client" id="company-largest-client">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">What is your most profitable client, industry or type? </label>
                            <div>
                                <input class="form-control" type="text" name="company-most-profitable" id="company-most-profitable">
                            </div>
                        </div>
                    </div>

                    <div class="row my-4">
                    <div class="d-grid col-4 mx-auto">
                        <button class="btn btn-primary">Prev</button>
                        {# <a href="/form/2" class="btn btn-primary">Prev</a> #}
                    </div>
                    <div class="d-grid col-4 mx-auto">
                        <button class="btn btn-primary" onclick="companyFormInfoFunc(event)">Next</button>
                        {# <a href="/form/4" class="btn btn-primary">Next</a> #}
                    </div>
                </div>
                </div>
            </form>
        </div>
            <div class="text-center">Copyright</div>
    </div>
</div>

<script src="/js/formLayout.js"></script>

{% endblock %}