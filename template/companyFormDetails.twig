{% extends 'base.twig' %}

{% block title %}company details{% endblock %}

{% block content %}

<div id="companyContainer" class="container p-5 transitionForward transitionBackward">

    <h3 class="">Business Infomation</h3>

    <div class="container">

        <div class="mx-4">
            <form action="" id="formCompanyDetailInputContainer">
                <div class='border my-3 p-5' id="formInputDiv">
                    <div class="mb-3">
                        <label class="form-label">Why should customers buy from your Company? </label>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" name="company-buy-reason" id="company-buy-reason"></textarea>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">If your Company was a car brand, which brand would they be?</label>
                        <div>
                            <select class="form-select" name="company-car" id="company-car">
                                <option selected>Choose...</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Why makes your Company unique? </label>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" name="company-unique" id="company-unique"></textarea>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">What geographical area does your Company service? </label>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" name="company-region" id="company-region"></textarea>
                        </div>
                    </div>

                <div class="row my-4">
                    <div class="d-grid col-4 mx-auto">
                        <button class="btn btn-primary" onclick="companyFormPrevFunc(event)">Prev</button>
                        {# <a href="/form/1" class="btn btn-primary">Prev</a> #}
                    </div>
                    <div class="d-grid col-4 mx-auto">
                        <button class="btn btn-primary" onclick="companyFormFunc(event)">Next</button>
                        {# <a href="/form/3" class="btn btn-primary">Next</a> #}
                    </div>
                </div>
            </form>
        </div>
            <div class="text-center">Copyright</div>
    </div>
</div>

<script src="/js/formLayout.js"></script>

{% endblock %}