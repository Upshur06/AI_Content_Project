{% extends 'base.twig' %}

{% block title %}brands info{% endblock %}

{% block content %}

<div id="brandsContainer" class="container p-5">

    <h3 class="">Look, Feel and Marketing</h3>

    <div class="container">

        <div class="mx-4">
            <form action="" id="formBrandsInputContainer">
                <div class='border my-3 p-5' id="formInputDiv">
                    <h4>What Brands do you like?</h4>
                    <label class="form-check-label">
                        List atleast 2
                    </label>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div>
                                <input class="form-control" type="text" name="brand-list" id="brand-list">
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <button class="btn btn-success">+</button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Why do you like this brand? </label>
                        <div class="">
                            <textarea class="form-control" placeholder="Leave a comment here" name="brand-list-why-like" id="brand-list-why-like"></textarea>
                        </div>
                    </div>
                    
                </div>

                <div class="row my-4">
                    <div class="d-grid col-4 mx-auto">
                        <button class="btn btn-primary">Prev</button>
                        {# <a href="/form/7" class="btn btn-primary">Prev</a> #}
                    </div>
                    <div class="d-grid col-4 mx-auto">
                        <button class="btn btn-primary" onclick="companyFormBrandFunc(event)">Next</button>
                        {# <a href="/form/9" class="btn btn-primary">Next</a> #}
                    </div>
                </div>
            </form>
        </div>
            <div class="text-center">Copyright</div>
    </div>
</div>

<script src="/js/formLayout.js"></script>

{% endblock %}